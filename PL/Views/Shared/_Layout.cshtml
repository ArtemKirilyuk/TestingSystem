<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TS - @ViewBag.Title</title>
    <link rel="shortcut icon" href="../../Content/Images/shortcutIcon.png" type="image/png">
    <link rel="stylesheet" href="../../Content/animate.css">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="padding-bottom: 0">
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("TS", "Home", "Test", new {area = ""}, new {@class = "navbar-brand", title = "Testing System"})
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                @if (Context.User.IsInRole("User"))
                {
                    <li>@Html.ActionLink("Create test", "CreateTest", "Test")</li>
                }
                <li>@Html.ActionLink("Statistics", "Statistics", "Test")</li>
                <li>@Html.ActionLink("About", "About", "Test")</li>
            </ul>
            @RenderSection("Search", required: false)
            @Html.Partial("_LoginPartial", new {@class = "nav navbar-nav navbar-right"})
        </div>
    </div>
</div>
<div class="container body-content">
    @RenderBody()

</div>
    <footer class="modal-footer">
        <div class="container">
                    <ul class="nav nav-pills nav-justified">
                        <li><a class="text-muted" href="http://www.w3schools.com/bootstrap/">© @DateTime.Now.Year Testing system</a></li>
                        <li><a class="text-muted" href="http://www.w3schools.com/bootstrap/">Learn more</a></li>
                        <li><a class="text-muted" href="http://www.w3schools.com/bootstrap/">By Artem</a></li>
                    </ul>
        </div>
    </footer>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@Scripts.Render("~/Scripts/customScript.js")
@RenderSection("scripts", required: false)
</body>

</html>
